[user]
    name = "Slawek Zachcial"
    # The below email may be overwritten by ~/.localrc included from ~/.zshrc to allow to use different emails for personal and work stuff
    email = slawek.zachcial@gmail.com
[color]
    ui = auto
[alias]
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(cyan)<%an>%Creset' --abbrev-commit --date=relative
    lg1 = log --oneline
[core]
    autocrlf = input
    excludesfile = ~/.gitignore_global
    filemode = false
	editor = /usr/bin/vim
[merge]
    tool = bc3
[mergetool]
    prompt = false
[difftool]
    prompt = false
[svn]
    rmdir = true
[push]
    default = simple
[credential]
    helper = cache --timeout 86400
[http]
    sslVerify = false
